#intro
def slowly
 yield.each_char { |c| putc c; $stdout.flush; sleep 0.05 }
end ## defaut speed

def slowly1
 yield.each_char { |c| putc c; $stdout.flush; sleep 0.08 }
end

def slowly2
 yield.each_char { |c| putc c; $stdout.flush; sleep 0.1 }
end

def slowly3
 yield.each_char { |c| putc c; $stdout.flush; sleep 0.15 }
end

def slowly4
 yield.each_char { |c| putc c; $stdout.flush; sleep 0.2 }
end

def slowly6
 yield.each_char { |c| putc c; $stdout.flush; sleep 0.25 }
end


system "clear"
print "FUTURAMA\n\n"
print "Anthology of Interest: Part One\n\n"
sleep (1)

slowly6 do
 "Painstakingly Typed Before A Live Audience."
end

sleep (2)

system "clear"
sleep (0.5)
print """Scene: Planet Express: Farnsworth's Lab."""
sleep (1.5)
print """\nThe staff are assembled around a table.\n\n"""
sleep (1.5)

print "Farnsworth\n\n"
sleep (1)
print "GOOD NEWS EVERYONE!\n"
sleep (1)

